# ============================================
# CESTO AI - Environment Configuration
# ============================================

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3400
API_PREFIX=api/v1
BCRYPT_ROUNDS=12

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://cesto_user:cesto_password@postgres:5432/cesto_ai
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=cesto_user
DB_PASSWORD=cesto_password
DB_NAME=cesto_ai

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=cesto-super-secret-jwt-key-2024-production-ready-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# AI SERVICES CONFIGURATION
# ============================================
GROQ_API_KEY=your-groq-api-key-here
AI_MODEL_CACHE_TTL=3600
AI_PREDICTION_CONFIDENCE_THRESHOLD=0.7
AI_SERVICE_URL=http://ai-services:8001

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:4200,http://localhost:4400,http://localhost:3000

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cesto.ai
SMTP_SECURE=false

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/cesto.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================
# PAGINATION
# ============================================
PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:4400
FRONTEND_PORT=4400

# ============================================
# MONITORING & HEALTH CHECKS
# ============================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

# ============================================
# PRODUCTION SETTINGS (Override for production)
# ============================================
# NODE_ENV=production
# DEBUG=false
# ENABLE_SWAGGER=false
# JWT_SECRET=your-production-secret-key
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_db:5432/cesto_prod
# REDIS_URL=redis://prod_redis:6379
